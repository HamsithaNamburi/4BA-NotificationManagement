@model NotificationManagementUI.Models.Notifications

@{
    ViewData["Title"] = "AddNotification";
}

<h1>AddNotification</h1>

<h4>Notifications</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddNotification">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NotificationName" class="control-label"></label>
                <input asp-for="NotificationName" class="form-control" />
                <span asp-validation-for="NotificationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("back to list", "GetAllNotifications", new { id = @ViewBag.UserId }) |
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
